{
    "name": "ricardopedias/freep-pubsub",
    "type": "library",
    "description": "Secure implementations for critical native functions",
    "keywords": ["framework", "freep", "security"],
    "license": "MIT",
    "require": {
        "php": "^8.0.0",
        "react/event-loop": "^1.3",
        "ricardopedias/freep-console": "dev-main"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^0.12",
        "squizlabs/php_codesniffer": "3.*",
        "phpmd/phpmd": "@stable",
        "codacy/coverage": "dev-master",
        "guzzlehttp/guzzle": "^7.2",
        "predis/predis": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Freep\\PubSub\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts" : {
        "test": "vendor/bin/phpunit --testdox",
        "coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": [
            "phpcbf --standard=PSR1,PSR12 src tests",
            "phpcs --standard=PSR1,PSR12 src tests",
            "phpmd ./src ansi cleancode,codesize,unusedcode,naming,design,controversial",
            "phpmd ./tests ansi cleancode,codesize,unusedcode,naming,design,controversial",
            "phpstan analyse --level=8 src",
            "phpstan analyse --level=8 tests"
        ],
        "server-8080": [
            "cd example; php -S localhost:8080"
        ],
        "server-8081": [
            "cd example; php -S localhost:8081"
        ],
        "client-sync": [
            "php example/simple-client-sync.php"
        ],
        "client-async": [
            "php example/simple-client-async.php"
        ],
        "event-server": [
            "cd example; php event-server.php"
        ],
        "event-client": [
            "cd example; php event-client.php"
        ]
    }
}
